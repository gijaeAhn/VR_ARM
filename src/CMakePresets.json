{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "description": "Use the release configuration with the Conan toolchain",
      "hidden": false,
      "binaryDir": "${sourceDir}/build/bin",
      "generator": "Unix Makefiles",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "~/.conan2/build/Release/generators/conan_toolchain.cmake",
        "CMAKE_INSTALL_PREFIX": "/path/to/install"
      }
    }
  ]
}

